<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PlayerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/myToolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/app_name"
        app:titleTextColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:theme="@style/AppTheme">

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:padding="1dp"
        android:layout_margin="1dp">

        <LinearLayout
            android:padding="1dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTeamName1"
                android:textSize="20dp"
                android:hint="Team 1"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTeam1Player"
                android:hint="Name"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_margin="1dp">

                <EditText
                    android:id="@+id/etTeam1TNum"
                    android:hint="T No."
                    android:inputType="number"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabAddPlayer1"
                    android:src="@drawable/add"
                    android:backgroundTint="@color/colorBlue"
                    android:layout_gravity="right"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTeam1"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:padding="1dp"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTeamName2"
                android:textSize="20dp"
                android:hint="Team 2"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/etTeam2Player"
                android:hint="Name"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:layout_margin="1dp">

                <EditText
                    android:id="@+id/etTeam2TNum"
                    android:hint="T No."
                    android:inputType="number"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fabAddPlayer2"
                    android:src="@drawable/add"
                    android:backgroundTint="@color/colorBlue"
                    android:layout_gravity="right"
                    android:padding="2dp"
                    android:layout_margin="2dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rvTeam2"
                android:padding="1dp"
                android:layout_margin="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnLetsPlay"
        android:text="Lets Play"
        android:textSize="16sp"
        android:padding="1dp"
        android:layout_margin="1dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

</LinearLayout>